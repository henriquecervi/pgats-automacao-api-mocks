{
  "name": "banco-api",
  "version": "1.0.0",
  "description": "REST API for testing and automation with basic banking features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha tests/**/*.test.js --recursive --timeout 5000",
    "test:controllers": "mocha tests/controllers/*.test.js --timeout 5000",
    "test:services": "mocha tests/services/*.test.js --timeout 5000",
    "test:integration": "mocha tests/integration/*.test.js --timeout 5000",
    "test:system": "mocha tests/system/*.test.js --timeout 5000",
    "test:report": "mocha tests/**/*.test.js --recursive --timeout 5000 --reporter mochawesome --reporter-options reportDir=test-results,reportFilename=test-report,reportTitle='Banco API Test Report',reportPageTitle='Test Results'",
    "test:ci": "mocha tests/**/*.test.js --recursive --timeout 5000 --reporter spec --reporter json --reporter-options output=test-results/test-results.json"
  },
  "keywords": [
    "api",
    "rest",
    "banco",
    "express",
    "swagger",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "nodemon": "^3.0.1",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  }
}
